{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ESNext", "ES2020", "ES6", "ES2017"],
    "types": ["jest", "node"],
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist/",
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext"
  },
  "exclude": [
    "src/**/*.spec.*",
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*"
  ],
  "include": ["src"]
}
